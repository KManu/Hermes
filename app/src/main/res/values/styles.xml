    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	
	<!--
		Styles listed under this are custom themes. Categorize as necessary. 
		All colors/common resources to be used in different styles should be defined at the top.
		
		Theme items do not need to be prefixed with the android: namespace
		
	-->
	
	
	
	<style name="NoActionBar" parent="@style/Theme.AppCompat.Light">
		<item name="android:windowNoTitle">true</item>
	</style>
	
	
	
	<style name="ActionBarTheme" parent="@style/Theme.AppCompat">
    	<!-- Setting values in the default namespace affects API levels 7-13 -->
    	<item name="actionBarStyle">@style/TransLinedActionBar</item>
    	<item name="popupMenuStyle">@style/MenuStyle</item>
	</style>

	<style name="TransLinedActionBar" parent="@style/Widget.AppCompat.ActionBar">
    	<!-- Setting values in the default namespace affects API levels 7-13 -->
    	<item name="background">@color/trans_deep_blue</item>
    	<item name="windowActionBarOverlay">true</item>
    	<item name="titleTextStyle">@style/ActionBarTextChalk</item>
	</style>
	
	<style name="MenuStyle" parent="@style/Widget.AppCompat.ListPopupWindow">
	    <item name="android:popupBackground">@color/trans_deep_blue</item>
	    <item name="android:textColor">@color/chalk</item>
	</style>
	
	
	
	
	
	
	
	<!-- Activity Background Styles -->
	<style name="GrayBack">		
        <item name="android:windowBackground">@color/light_gray</item>
		<item name="android:colorBackground">@color/light_gray</item>
    </style>
	<style name="BlueBack">
		<item name="android:windowBackground">@color/light_blue</item>
		<item name="android:colorBackground">@color/light_blue</item>
	</style>
	<style name="ReddishBack">
		<item  name="android:windowBackground">@color/reddish</item>
		<item name="android:colorBackground">@color/reddish</item>
	</style>
	
	<!-- Button Styles -->
	<style name="transLinedButton">
	    <item name="android:textColor">@color/chalk</item>
	    <item name="android:background">@drawable/round_corners</item>
	    <item name="android:textSize">15sp</item>
	</style>
	<style name="whiteRectBorder">
	    <item name="android:background">@drawable/rect_border_ring</item>
	</style>
	
	<!-- Form styles -->
	<style name="flat_button">
	    <item name="android:textColor">@color/fbutton_color_wet_asphalt</item>
	    <item name="android:background">@drawable/flat_button</item>
	</style>
	

	
	<!-- Action Bar Text style -->
	<style name="ActionBarTextChalk" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
	    <item name="android:textColor">@color/chalk</item>
	    
	</style>

	
	<!--Misc resources -->
	<style name="Divider">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">2dp</item>
	    <item name="android:background">#FFFFFF</item>
	</style>
	

</resources>
